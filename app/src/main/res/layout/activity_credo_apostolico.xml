<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CredoApostolicoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/credo1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/credointro"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge" />

        <GridLayout
            android:columnCount="1"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="btnPortugues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6sp"
                app:cardCornerRadius="10sp"
                android:layout_margin="12sp"
                app:cardBackgroundColor="@color/cardview_light_bg"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="6sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_doc_page"
                        android:layout_width="50sp"
                        android:layout_height="50sp"/>

                    <TextView
                        android:id="@+id/btnPortugues"
                        android:layout_marginTop="12sp"
                        android:layout_marginLeft="5sp"
                        android:text="@string/portugues"
                        android:textStyle="bold"
                        android:textColor="@color/cardTexColor"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="btnKikongo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6sp"
                app:cardCornerRadius="10sp"
                android:layout_margin="12sp"
                app:cardBackgroundColor="@color/cardview_light_bg"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="6sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_doc_page"
                        android:layout_width="50sp"
                        android:layout_height="50sp"/>

                    <TextView
                        android:id="@+id/btnKikongo"
                        android:layout_marginTop="12sp"
                        android:layout_marginLeft="5sp"
                        android:text="@string/kikongo"
                        android:textStyle="bold"
                        android:textColor="@color/cardTexColor"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="btnUmbundo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6sp"
                app:cardCornerRadius="10sp"
                android:layout_margin="12sp"
                app:cardBackgroundColor="@color/cardview_light_bg"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="6sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_doc_page"
                        android:layout_width="50sp"
                        android:layout_height="50sp"/>

                    <TextView
                        android:id="@+id/btnUmbundo"
                        android:layout_marginTop="12sp"
                        android:layout_marginLeft="5sp"
                        android:text="@string/umbundo"
                        android:textStyle="bold"
                        android:textColor="@color/cardTexColor"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="btnKimbundo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6sp"
                app:cardCornerRadius="10sp"
                android:layout_margin="12sp"
                app:cardBackgroundColor="@color/cardview_light_bg"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="6sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_doc_page"
                        android:layout_width="50sp"
                        android:layout_height="50sp"/>

                    <TextView
                        android:id="@+id/btnKimbundo"
                        android:layout_marginTop="12sp"
                        android:layout_marginLeft="5sp"
                        android:text="@string/kimbundo"
                        android:textStyle="bold"
                        android:textColor="@color/cardTexColor"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>
</ScrollView>