<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3977344709856457/7360926560">
        </com.google.android.gms.ads.AdView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/benvindo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/benvindo"
                    android:textColor="@color/ColorTextTitle"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="9"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnPortugues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnPortugues"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/portugues"
                            android:textStyle="bold"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnKikongo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnKikongo"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/kikongo"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnUmbundo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnUmbundo"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/umbundo"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnKimbundo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnKimbundo"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/kimbundo"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ads:adSize="SMART_BANNER"
                    ads:adUnitId="ca-app-pub-3977344709856457/8519013804">
                </com.google.android.gms.ads.AdView>

                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnLResponsiva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnLResponsiva"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/leitura"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnICPAdoracao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnICPAdoracao"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/invocacao"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnSantaCeia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnSantaCeia"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/santaceia"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnOracaoDominical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnOracaoDominical"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/oracaodominical"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnCredoApostolico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="6sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_open_book"
                            android:layout_width="50sp"
                            android:layout_height="50sp"/>

                        <TextView
                            android:id="@+id/btnCredoApostolico"
                            android:layout_marginTop="12sp"
                            android:layout_marginLeft="5sp"
                            android:text="@string/credo"
                            android:textColor="@color/cardTexColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>