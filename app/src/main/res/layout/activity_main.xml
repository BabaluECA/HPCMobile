<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3977344709856457/8039583417">
        </com.google.android.gms.ads.AdView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnAbrirHinario"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_open_book" />

                        <TextView
                            android:id="@+id/hinario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/abrir"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnCalendar"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_calendar" />

                        <TextView
                            android:id="@+id/calendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/calendario"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnMinhaIgreja"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/igreja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/brevemente"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnDoacoes"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_money_donation" />

                        <TextView
                            android:id="@+id/ajudenos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="Ajude-nos!"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnCreditos"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_information" />

                        <TextView
                            android:id="@+id/credito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/creditos"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnContactos"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_contact" />

                        <TextView
                            android:id="@+id/contactos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/contactos"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnPrefacio"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_prefacio" />

                        <TextView
                            android:id="@+id/prefacio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/prefacio"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="btnPrivacidade"
                    app:cardBackgroundColor="@color/cardview_light_bg"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/ic_privacy_control" />

                        <TextView
                            android:id="@+id/privacidade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:text="@string/privacidade"
                            android:textColor="@color/cardTexColor"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>